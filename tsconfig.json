{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "commonjs",
        "esModuleInterop": true,

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,


        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
          "ESNext",
          "DOM"
        ]
    }
} 
