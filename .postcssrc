{
  "plugins": {
      "postcss-import": {
        "root": "",
        "path": ""
      },
      
      "postcss-sorting": {
        "order": [
            "custom-properties",
            "dollar-variables",
            "declarations",
            "at-rules",
            "rules"
        ],

        "properties-order": "alphabetical",

        "unspecified-properties-position": "bottom"
      },

      "postcss-nested": true,
      "postcss-mixins": true,
      "postcss-custom-properties": {
        "preserve": false
      },
      "postcss-simple-vars": true,
      "postcss-safe-parser": false
    }
}
