@import "static/css/variable.pcss";
@import "static/css/mixin.pcss";

.avatar {
    @mixin absolute-strech__parent;

    width: 140px;
    height: 140px;
    border-radius: 70px;
    background: var(--avatar-color);
    overflow: hidden;
    text-align: center;

    &__label {
        @mixin absolute-strech;
        cursor: pointer;
        background-image: url("/static/images/emptyAvatar.svg");
        background-repeat: no-repeat;
        background-position: center;
    }

    &__input {
        @mixin absolute-strech;
        visibility: hidden;
    }

    &__hover-label {
        @mixin absolute-strech;
        opacity: 0;
        transition: opacity 0.15s ease 0s;
        padding: 45% 0;
        pointer-events: none;
    }

    &:hover > &__hover-label {
        opacity: 1;
    }
    
}