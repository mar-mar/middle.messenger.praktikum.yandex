<div class="{{ styles.root }}">
    {{#components_form item=this.item 
        attachName="form"
        [event:submit]=onSubmit item=item}}

        <div>
            {{{components_input label="Почта" key="email" isValid=validateEmail item=item }}}
            {{{components_input label="Логин" key="login" isValid=validateLogin item=item }}}
            {{{components_input label="Имя" key="first_name" isValid=validateName item=item }}}
            {{{components_input label="Фамилия" key="second_name" isValid=validateName item=item }}}
            {{{components_input label="Телефон" isValid=validatePhone key="phone" item=item }}}
            {{{components_input label="Пароль" type="password" key ="password" isValid=validatePassword item=item }}}
            {{{components_input label="Пароль (еще раз)" type="password" key="password" isValid=validatePassword item=item }}}
        </div>
        
        <div class="{{ styles.root }}__button-cont">
            {{{components_button label="Создать профиль" type="submit"  }}}
        </div>

    {{/components_form}}
</div>


