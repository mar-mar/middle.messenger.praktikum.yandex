<div class="{{styles.root}}">
    {{#layout_pageDialog
        title="Ваш профиль"
    }}

        {{{pages_profile_components_profileBody item=item 
            updatePassword=updatePassword 
            updateAvatar=updateAvatar 

            logoff=logoff
            execute=ecexuteMainProps
            }}}

        {{#layout_centerPane }}
        {{{components_textButton label="Назад к чатам" [event:click]=goMess }}}
        {{/layout_centerPane }}

    {{/layout_pageDialog}}


    {{#layout_modalDialog attachName=ATTACHES.PASS_MODAL title="Изменение пароля"  }}
        {{{pages_profile_modules_updatePasswordDialogBody 
            execute=ecexuteUpdatePassword  }}}
    {{/layout_modalDialog}}

    {{#layout_modalDialog attachName=ATTACHES.AVATAR_MODAL title="Загрузка файла для аватара"  }}
        {{{components_updateAvatarDialogBody 
            execute=ecexuteUpdataAvatar }}}
    {{/layout_modalDialog}}
</div>
