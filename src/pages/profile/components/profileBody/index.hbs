
<div class="{{ styles.root }}">

    <div class="{{ styles.root__left-col }}">

        <div class="{{ styles.root__settings-cont }}">

            {{#components_form 
                attachName=FORM_ATTACHE_NAME
                [event:submit]=onSubmit }}

                <div>
                    {{{components_input label="Имя в чате" name="display_name" value=user.display_name }}}
                    {{{components_input label="Логин" name="login" isValid=validateLogin value=user.login }}}
                    {{{components_input label="Имя" name="first_name" isValid=validateName value=user.first_name }}}
                    {{{components_input label="Фамилия" name="second_name" isValid=validateName value=user.second_name }}}
                    {{{components_input label="Почта" name="email" isValid=validateEmail value=user.email }}}
                    {{{components_input label="Телефон" name="phone" isValid=validatePhone value=user.phone }}}
                </div>
                
                <div class="{{ styles.root__setting-button-cont }}">
                    {{{components_button label="Сохранить изменения" type="submit" }}}
                </div>

                {{{components_simpleError attachName="error" error=error }}}

            {{/components_form}}

        </div>    

    </div>


    <div class="{{ styles.root__right-col }}">
        
        <div class="{{ styles.root__avatar-cont }}">

            {{{components_avatar clickLabel="Изменить аватар" 
                [event:click]=updateAvatar

                clickLabel="Изменить аватар"
                imageUrl=getAvatar 
                diameter='L'
                avatarOwner=user.display_name }}}
        </div>

        <div class="{{ styles.root__pass-cont }}">

            {{{components_textButton label="Изменить пароль" 
                [event:click]=updatePassword }}}
        </div>

        <div class="{{ styles.root__logout-cont }}">
            <div>{{{components_textButton 
                    [event:click]=logout

                    label="Выйти из профиля" 
                    red=1 }}}</div>
        </div>
        
    </div>

</div>
