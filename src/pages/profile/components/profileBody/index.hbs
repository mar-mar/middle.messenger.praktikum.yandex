
<div class="{{ styles.root }}">

    <div class="{{ styles.root }}__left-col">

        <div class="{{ styles.root }}__settings-cont">

            {{#components_form submitPageName="index"
                attachName="form"
                [event:submit]=onSubmit item=item }}

                <div>
                    {{{components_input label="Имя в чате" key="display_name" item=item }}}
                    {{{components_input label="Логин" key="login" isValid=validateLogin item=item }}}
                    {{{components_input label="Имя" key="first_name" isValid=validateName item=item }}}
                    {{{components_input label="Фамилия" key="second_name" isValid=validateName item=item }}}
                    {{{components_input label="Почта" key="email" isValid=validateEmail item=item }}}
                    {{{components_input label="Телефон" key="phone" isValid=validatePhone item=item }}}
                </div>
                
                <div>
                    {{{components_button label="Сохранить изменения" type="submit" }}}
                </div>

            {{/components_form}}

        </div>    

    </div>


    <div class="{{ styles.root }}__right-col">
        
        <div class="{{ styles.root }}__avatar-cont">
            {{{components_avatar clickLabel="Изменить аватар" [event:click]=onClickError404
                imageUrl=item.avatar diameter='L'
                avatarOwner=item.display_name }}}
        </div>

        <div class="{{ styles.root }}__pass-cont">
            {{{components_textButton label="Изменить пароль" [event:click]=onClickError404 }}}
        </div>

        <div class="{{ styles.root }}__logout-cont">
            <div>{{{components_textButton label="Выйти из профиля" [event:click]=onClickLogin
                    red=1 }}}</div>
        </div>
        
    </div>
</div>
