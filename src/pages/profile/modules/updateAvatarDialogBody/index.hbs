<div class="{{ styles.root }}">
{{#components_form 
    attachName="form"
    [event:submit]=onSubmit }}

    <div>
        {{#layout_centerPane horizontalType = "center" verticalType = "center" withMarginTop=1 }}
            <div class="{{ styles.root__file-name }}" >
                {{#if fileName}} {{fileName}} {{else}} файл не выбран {{/if}}
            </div>
        {{/layout_centerPane}}

        {{#layout_centerPane horizontalType = "center" verticalType = "center" withMarginTop=1 }}
            {{{components_fileInput label="Выбрать файл на комьютере" }}}
        {{/layout_centerPane}}
        
    </div>

    <div class="{{ styles.root__button-cont }}">
        {{{components_button label="Изменить" type="submit" }}}
    </div>

{{/components_form}}
</div>
