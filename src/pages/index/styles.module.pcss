
@import url("src/style/mixin.pcss");

.root {
    display: flex;
    height: 100%;

    &__chats {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    &__chat {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        position: relative;
        overflow: hidden;

        &__messages {
            flex-grow: 1;
            overflow: auto;
        }
    }

    & .left-pane {
        @mixin only-border-right;

        max-width: 250px;
        min-width: 250px;
        overflow: hidden;
    }

    & .chat-header {
        @mixin only-border-bottom;
    }

    & .chat-input {
        @mixin only-border-top;
    }

}


