.root {
    cursor: pointer;
    display: flex;
    padding: var(--micro-offset);
    align-items: center;
    
    &:hover {
        background: var(--hover-color);
    }

    &__label {
        flex-grow: 1;
        margin-left: var(--micro-offset);
    }

    &__date {
       color: var(--grey-font-color);
       font-size: var(--mini-font-size);
    }
}
