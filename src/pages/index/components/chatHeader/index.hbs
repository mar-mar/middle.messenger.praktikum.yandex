
<div class="{{ styles.root }}">

    <div class="{{ styles.root }}__avatar">
        {{{components_avatar imageUrl=item.profile.avatar diameter='S' 
            avatarOwner=item.profile.display_name }}}
    </div>

    <div class="{{ styles.root }}__label">
        {{item.profile.display_name}}
    </div>

    <div class="{{ styles.root }}__menu">
        {{{components_textButton label="Меню чата" 
            iconClass="menu-icon" noLabel=1 
            [event:click] = openPopupChatMenu
            }}}
    </div>
</div>
