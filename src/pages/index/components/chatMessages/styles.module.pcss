@import url("src/style/variable.pcss");
@import url("src/style/mixin.pcss");

.root {
    padding: var(--second-offset);

    &__group {
        display: flex;
        flex-direction: column;
    }

    &__group-name {
        color: var(--grey-font-color);
    }

    &__message {
        background: var(--message-back-color3);
        border-radius: var(--pane-radius);
        margin: var(--micro-offset);
        max-width: 90%;
        overflow: hidden;
        padding: var(--mini-offset);
        width: fit-content;
    }

    &__message--my {
        align-self: flex-end;
        background: var(--message-back-color1);
    }

    &__message-time {
        color: var(--grey-font-color);
        font-size: var(--mini-font-size);
        margin-top: var(--micro-offset);
    }
}
