<div class="{{ styles.root }}">
{{#components_form 
    attachName=FORM_ATTACHE_NAME
    [event:submit]=onSubmit }}

    <div>
        {{{components_input label="Логин" name="login" value=item.login isValid=validateLogin }}}
    </div>

    <div class="{{ styles.root }}__button-cont">
        {{{components_button label="Удалить" type="submit" }}}
    </div>

    {{{components_simpleError attachName="error" error=error }}}
    
{{/components_form}}
</div>
