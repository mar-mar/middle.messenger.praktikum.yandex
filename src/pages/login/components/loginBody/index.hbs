<div>
{{#components_form 
    attachName="form"
    item=item 
    [event:submit]=onSubmit }}

    <div>
        {{{components_input label="Логин" key="login" item=item
            isValid=validateLogin }}}
        {{{components_input label="Пароль" inputType="password" key="password" item=item
            isValid=validatePassword }}}
    </div>

    <div>
        {{{components_button label="Войти" type="submit" }}}
    </div>

{{/components_form}}
</div>
