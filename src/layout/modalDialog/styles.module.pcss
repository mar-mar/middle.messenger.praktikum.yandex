@import url("src/style/variable.pcss");
@import url("src/style/mixin.pcss");

.root {
    @mixin absolute-strech;

    display: none;
    
    &__main {
        @mixin bordershadow;
        @mixin center-position;
    
        position: relative;
        width: fit-content;
        height: fit-content;
        min-width: 200px;
        min-height: 200px;
        display: flex;
        flex-direction: column;
        padding: var(--second-offset);
    }

    &__underlay {
        @mixin absolute-strech;

        display: flex;
        z-index: var(--modal-zindex);
        background: var(--modal-underlay-back-color);
    }

    &__header {
        margin-bottom: var(--second-offset);
        font-weight: bold;
    }

    &__header__header {
        font-weight: bold;
    }

    &__body {
        flex-grow: 1;
    }

}
