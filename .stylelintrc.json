{
    "extends": "stylelint-config-standard",
    "plugins": [
		"stylelint-order"
	],
    
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["mixin", "define-mixin"]
            }
        ],
        "rule-empty-line-before": [
			"always-multi-line",
			{
				"except": ["first-nested"],
				"ignore": ["after-comment"]
			}
		]
    }
}
